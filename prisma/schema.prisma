generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// * Ignore User for now and 
// TODO:implement UUID in Userid place
model User {
  id       Int @id @default(autoincrement())
  email    String
  password String
  username String?
}

// TODO: We should have a company table to add the Company ID as forieng key 
model Event {
  id                Int @id @default(autoincrement())
  name              String
  description       String
  shortDescription  String?
  userID            String?
  companyID         String?
  eventlocation     String
  startTime         String
  endTime           String
  image             String?
  theme             String?
  userCapacity      Int
  eventType         String
}

